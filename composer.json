{
    "name": "creacoon/laravel-dashboard-fathom-tile",
    "description": "fathom tile for spatie/laravel-dashboard",
    "keywords": [
        "creacoon",
        "laravel-dashboard-fathom-tile",
        "fathom"
    ],
    "homepage": "https://github.com/creacoon/laravel-dashboard-fathom-tile",
    "license": "MIT",
    "authors": [
        {
            "name": "Dion",
            "email": "d.nijssen@creacoon.nl",
            "homepage": "https://creacoon.nl",
            "role": "Developer"
        }
    ],

    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:phuclh/fathom-api.git"
        }
    ],

    "require": {
        "php": "^8.0|^7.4",
        "spatie/laravel-dashboard": "^2.0",
        "based/fathom": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.6.2"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\FathomTile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\FathomTile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\FathomTile\\FathomTileServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
